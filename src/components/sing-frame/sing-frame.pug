
//- components
include ./sing-form/sing-form.pug

//- component
mixin sing-frame(inputs)
  #sing-frame.sing-frame(data-class="full")
    .sing-frame--illustration
    .sing-frame--frame(data-class="flex-center")
      +sing-form(inputs)
      +base-logo()(class="sing-frame--logo")
      +base-close-button()(class="sing-frame--close-button")
      +base-copyright()(class="sing-frame--copyright")