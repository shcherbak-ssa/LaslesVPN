
//- components
include ./plan-list-item/plan-list-item.pug

//- component
mixin plan(planItem)
  - let planImage = `assets/images/${planItem.image}.png`;
  - let cost = planItem.cost ? `$${planItem.cost} <span>/ mo</span>` : 'Free';

  .plan(data-class="main-radius main-border box-sizing flex-between")
    .plan--description(data-class="flex-column")
      img.plan--image(src=planImage)
      .plan--content
        +base-header-level-3(planItem.header)(class="plan--header")
        .plan--list
          each item in planItem.list
            +plan-list-item(item)
    .plan--choise(data-class="flex-column")
      .plan--cost(data-class="font-medium")
        = planItem.cost ? `$${planItem.cost} ` : 'Free'
        if planItem.cost
          span / mo
      +base-button-small('Select')(class="plan--button")
