
mixin preview-section()
  +base-section-container('preview-section')
    .preview-section--illustration(data-class="io")
    
    h1.preview-section--header(data-class="fm")
      | Want anything to be easy with <span data-class="fb">LaslesVPN</span>
    +base-paragraph(
      'Provide a network for all your needs with ease and fun using LaslesVPN discover interesting features from us.'
    )(class="preview-section--paragraph")
    +base-button-large('Get Started')(class="preview-section--button")
