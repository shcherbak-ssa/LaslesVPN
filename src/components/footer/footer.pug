
//- assets
- let socialIcons = ['facebook', 'twitter', 'instagram'];

//- component
mixin footer()
  footer.footer
    .footer--container(data-class="box-sizing site-content-center flex-between")
      .footer--info
        +base-logo()(class="footer--logo")
        .footer--text.
          <span data-class="font-medium">LaslesVPN</span> is a private virtual network that has unique features and has high security.
        .footer--social(data-class="flex-between")
          each icon in socialIcons
            +base-social-icon(icon)
        +base-copyright()
      .footer--links
